{
    "name": "simple-tags-for-vue",
    "version": "1.1.7",
    "description": "Attach or detach tags with suggestions. Vue 3. Styled with Tailwind CSS.",
    "author": "BEAUBUS",
    "license": "MIT",
    "main": "dist/simple-tags-for-vue.ssr.js",
    "browser": "dist/simple-tags-for-vue.esm.js",
    "module": "dist/simple-tags-for-vue.esm.js",
    "unpkg": "dist/simple-tags-for-vue.min.js",
    "files": [
        "dist/*",
        "src/**/*.vue"
    ],
    "sideEffects": false,
    "scripts": {
        "serve": "vue-cli-service serve dev/serve.js",
        "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
        "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
        "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
        "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-babel": "^5.2.2",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "@rollup/plugin-replace": "^2.3.4",
        "@vue/cli-plugin-babel": "^4.5.10",
        "@vue/cli-service": "^4.5.10",
        "@vue/compiler-sfc": "^3.0.5",
        "cross-env": "^7.0.3",
        "minimist": "^1.2.5",
        "postcss": "^8.2.3",
        "rollup": "^2.36.1",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-vue": "^6.0.0",
        "vue": "^3.0.5"
    },
    "peerDependencies": {
        "vue": "^3.0.5"
    },
    "engines": {
        "node": ">=12"
    },
    "repository": {
        "type" : "git",
        "url" : "https://github.com/beaubus/simple-tags-for-vue"
    },
    "keywords": [
        "vue",
        "vue.js",
        "vue3",
        "vue 3.0",
        "vuejs",
        "tags",
        "input",
        "tailwind",
        "tailwindcss",
        "Tailwind CSS",
        "laravel",
        "tags input",
        "laravel tags",
        "spatie/laravel-tags"
    ]
}
